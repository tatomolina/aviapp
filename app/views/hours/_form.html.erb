<%= form_for @hour do |form| %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-group">
      <br>
      <div class="text-center">
        <h3> <%= form.label :registration_id %> </h3>
      </div>
      <%= form.select(:plane_registration_id, PlaneRegistration.all.collect {|p| [ p.registration, p.id ] }, {}, { multiple: false , class: "form-control" })%>
      <br>
      <div class="text-center">
        <h3><%= form.label :date %></h3>
      </div>
      <%= form.date_select :date, class: "form-control text-center" %>
      <br> <br>
      <div class="text-center">
        <h3><%= form.label :start_time, "UTC Start Time" %></h3>
      </div>
      <%= form.time_select :start_time, class: "form-control text-center" %>
      <br> <br>
      <div class="text-center">
        <h3><%= form.label :end_time, "UTC End Time" %></h3>
      </div>
      <%= form.time_select :end_time, class: "form-control text-center" %>
      <br> <br>
      <div class="text-center">
        <h3><%= form.label :landings %></h3>
      </div>
      <%= form.text_field :landings, class: "form-control text-center" %>
      <br>
      <div class="text-center">
        <h3> <%= form.label :purpose_flight_id %> </h3>
      </div>
      <%= form.select(:purpose_flight_id, PurposeFlight.all.collect {|p| [ p.name, p.id ] }, {}, { multiple: false , class: "form-control" })%>

      <br/>
      <div class="text-center">
        <%= form.submit :class => "btn btn-default" %>
      </div>
    </div>
  </div>
</div>
<% end %>
